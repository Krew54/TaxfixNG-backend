# TaxFix NG - Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=Change_Me_To_Strong_Password
DB_NAME=taxfix

# ============================================
# Email Configuration (MailJet)
# ============================================
MAIL_JET_API_KEY=your_mailjet_api_key
MAIL_JET_API_SECRET_KEY=your_mailjet_secret_key

# ============================================
# Authentication
# ============================================
SALT=your_salt_for_password_hashing
JWT_SECRET_KEY="your_jwt_secret_key_minimum_32_characters"
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# AI APIs
# ============================================
OPENAI_API_KEY=your_openai_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key

# ============================================
# Admin Panel Configuration
# ============================================
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================
# Celery Background Tasks
# ============================================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ============================================
# Application Configuration
# ============================================
URL_PORT=8000
USERNAME=admin
PASSWORD=admin

# ============================================
# Local File Storage (For Contabo Deployment)
# ============================================
STORAGE_PATH=/app/storage

# ============================================
# CORS Configuration
# ============================================
ALLOWED_ORIGINS=https://www.taxfixng.com,https://admin.taxfixng.com,http://localhost:3000,http://localhost:8000

# ============================================
# Legacy AWS Configuration (Not Used - Kept for Reference)
# ============================================
